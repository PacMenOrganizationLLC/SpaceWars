@using SpaceWars.Logic
@using SpaceWars.Logic.Actions

<div class="row border border-3 rounded p-2 w-100 bg-light">
    <h4>Messages</h4>
    <ul class="px-1" style="max-height:200px; overflow-y:auto; display: flex; flex-direction: column-reverse;">
        @if (Messages.Count == 0)
        {
            <li class="small">No messages</li>
        }
        @foreach (var message in Messages)
        {
            <li class="small">@(DateTime.Now.ToShortTimeString()): @message.Type - @message.Message</li>
        }
    </ul>
</div>

@code {
    [Parameter, EditorRequired] public List<PlayerMessage> Messages { get; set; } = new List<PlayerMessage>();
}
