<div style="position: relative; width: 50px; height: 50px;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 50px; height: 50px; border-radius: 50%; background-color: lightgray; display: flex; justify-content: center; align-items: center;">
        <img src="arrow-up.svg" style="transform: rotate(@(Heading)deg); transition: transform 0.5s ease-in-out;" height="50px" width="auto" />
    </div>
</div>

@code {
    [Parameter]
    public int Heading { get; set; }
}

