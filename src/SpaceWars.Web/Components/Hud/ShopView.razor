@using SpaceWars.Logic

@if(Game.Map.CurrentShop == null)
{
    <p>Shop not found</p>
    return;
}

<div class="row border border-3 rounded p-2 w-100 bg-light mb-2">
    <h4>Shop</h4>
    <ul>
        @foreach (var item in Game.Map.CurrentShop)
        {
            <li class="small"> @item.Name: $@item.Cost </li>
        }
    </ul>
</div>
@code {
    [Parameter] public Game Game { get; set; }
}
